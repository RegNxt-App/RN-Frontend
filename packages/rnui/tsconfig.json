{
  "extends": "./node_modules/@rn/tsconfig/react-library.json",
  "include": ["src/components", "./utils", "./hooks", "index.ts"],
  "exclude": ["dist", "build", "node_modules", "src/components/**/*.stories.tsx"],

  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "noEmitOnError": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rn/rnui/*": ["./src/*"]
    },
    "outDir": "dist",
    "declaration": false
  }
}
